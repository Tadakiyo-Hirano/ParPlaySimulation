<%= render 'layouts/flash_messages' %>

<div class="container-login">

  <h1><%= t('.sign_up') %></h1>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, required: true, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control',
                                      required: true,
                                      minlength: @minimum_password_length,
                                      maxlength: '30' %>
                                      
      <% if @minimum_password_length %>
        <small class="form-text text-muted"><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></small>
      <% end %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, class: 'form-control',
                                                   required: true,
                                                   minlength: @minimum_password_length,
                                                   maxlength: '30' %>
    </div>

    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, autocomplete: 'name', class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :nickname %>
      <%= f.text_field :nickname, autocomplete: 'nickname', class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :phone_number %>
      <%= f.telephone_field :phone_number, autocomplete: 'phone_number', maxlength: '13', class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :flying_distance %>
      <%= f.select :flying_distance, [[180, 180], [200, 200], [220, 220], [240, 240], [260, 260]], autocomplete: 'flying_distance', class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.submit t('.sign_up'), class: 'btn btn-primary btn-block' %>
    </div>
  <% end %>

  <%= render 'devise/shared/links' %>

  <div class="form-group">
    <%= link_to 'Googleログイン', user_google_oauth2_omniauth_authorize_path, method: :post, class: 'btn btn-block btn-danger' %>
  </div>
  
</div>