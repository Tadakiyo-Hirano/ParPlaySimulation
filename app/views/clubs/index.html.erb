<div class="container">
  <%= render 'layouts/flash_messages' %>
  <h2 class="py-5">マイクラブ一覧</h2>
  <div class="text-right">
    <%= link_to "新しいマイクラブを登録する", new_club_path(current_user), remote: true, class: "btn btn-outline-brand mb-3" %>
  </div>
  <div class="text-right">
    <%= link_to "クラブセッティングする", clubs_select_user_path(current_user), class: "btn btn-brand mb-3" %>
  </div>

  <% row_num = 1 %>
  <div class="table-responsive">
    <table class="table">
      <thead class="thead-dark">
        <tr>
          <th scope="col">所持数</th>
          <th scope="col">番号</th>
          <th scope="col">番手</th>
          <th scope="col" class="text-center">名称</th>
          <th scope="col">ロフト</th>
          <th scope="col">長さ</th>
          <th scope="col">重量</th>
          <th scope="col">バランス</th>
          <th scope="col">振動数</th>
          <th scope="col">削除</th>
        </tr>
      </thead>
      <tbody>
        <% @clubs.each do |club| %>
          <% if club.deleted_at != nil %>
            <tr class="bg-secondary">
          <% else %>
            <tr>
          <% end %>
            <th scope="row"><%= row_num %></th>
            <% row_num = row_num + 1 %>
            <td><%= club.counter %></td>
            <td><%= club.yarn_count_string %><%=club.yarn_count_number %></td>
            <td><%= club.detail %></td>
            <td><%= club.loft %></td>
            <td><%= club.largo %></td>
            <td><%= club.weight %></td>
            <td><%= club.balance_string %><%= club.balance_number %></td>
            <td><%= club.frequency %></td>
            <td>
              <% if club.deleted_at != nil %>
                <button type="button" class="btn btn-outline-brand" disabled>削除</button>
              <% else %>
                <%= link_to '削除', clubs_logical_deletion_user_path(club, params: { club: { id: club.id, deleted_at: Time.now} }),
                                  :method => :post,
                                  class: "btn btn-outline-brand",
                      data: { confirm: "「番手：#{club.yarn_count_string}#{club.yarn_count_number}」　「名称：#{club.detail}」 を削除してよろしいですか？",
                              cancel: 'キャンセル',
                              commit: '削除する'
                            }
                %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

</div>

<!--モーダルウインドウ表示-->
<div id="new_club_path" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>