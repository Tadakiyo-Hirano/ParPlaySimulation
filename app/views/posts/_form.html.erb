<div class="form-group">
  <%= post.label :title %>
  <%= post.text_field :title, class: "form-control" %>
</div>

<div class="form-group">
  <%= post.label :comment %>
  <%= post.text_area :comment, class: "form-control" %>
</div>

<div class="form-group">
  <%= post.label :category_id %>
  <%= post.select :category_id, Category.all.order(:id).map { |category| [category.name, category.id] }, {}, { required: true, class: "form-control" } %>
</div>

<div class="form-group">
  <%= post.label :golfclub_id %>
  <%= post.select :golfclub_id, Golfclub.all.order(:id).map { |golfclub| [golfclub.name, golfclub.id] }, {}, { required: true, class: "form-control" } %>
</div>

<div class="form-group">
  <%= post.label :photo %><br>
  <%= post.file_field :photo,  class: "form-control-file" %>
</div>

<div class="form-group">
  <%= post.submit submit_name, data: { disable_with: '送信中' }, class: "btn btn-primary btn-block" %>
</div>

<div class="form-group">
  <%= link_to 'キャンセル', user_posts_path(current_user), class: "btn btn-secondary btn-block" %>
</div>
