<div class="form-group">
  <%= post.label :title %>
  <%= post.text_field :title, placeholder: "30文字以内", required: true, maxlength: "30", class: "form-control" %>
</div>

<div class="form-group">
  <%= post.label :comment %>
  <%= post.text_area :comment, placeholder: "250文字以内", required: true, maxlength: "250", class: "form-control" %>
</div>

<div class="form-group">
  <%= post.label :category_id %>
  <%= post.select :category_id, Category.all.order(:id).map { |category| [category.name, category.id] }, {}, { required: true, class: "form-control" } %>
</div>

<div class="form-group">
  <%= post.hidden_field :golfclub_id, value: @golfclub.id %>
</div>

<div class="form-group">
  <%= post.label :photo %><br>
  <%= post.file_field :photo, accept: "image/png, image/jpg, image/jpeg", class: "form-control-file" %>
</div>

<div class="form-group">
  <%= image_tag cdn_ready_blob_path(@post.photo), width: '250px', height: 'auto' if @post.photo.attached? %>
</div>

<div class="form-group">
  <%= post.submit submit_name, data: { disable_with: '送信中' }, class: "btn btn-primary btn-block" %>
</div>
