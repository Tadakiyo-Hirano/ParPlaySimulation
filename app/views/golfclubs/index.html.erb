<%= render 'layouts/flash_messages' %>
<div class="container-golfclub-index">
  <h1>ゴルフ場一覧</h1>
  <% @golfclubs.each do |golfclub| %>
    <div style="float: left; margin-right: 10px">
      <div>画像</div>
      <p><%= golfclub.name %></p>

      <% golfclub.courses.each do |course| %>
        <p><%= course.name %></p>
      <% end %>

      <p><%= link_to golfclub.home_page_url, golfclub.home_page_url, target: :_blank, rel: "noopener noreferrer" %></p>
      <p><%= link_to golfclub.strategy_video, golfclub.strategy_video, target: :_blank, rel: "noopener noreferrer" %></p>
      <p><%= link_to '編集', edit_golfclub_path(golfclub) %></p>
      <p><%= link_to '削除', golfclub_path(golfclub), method: :delete %></p>
    </div>
  <% end %>
