<%= form_with model: @category, local: true do |f| %>
  <div class="form-group">
    <%= f.text_field :name, placeholder: "20文字以内", required: true, maxlength: "20", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit submit_name, class: "btn btn-primary", data: { disable_with: '送信中' }, class: "btn btn-primary btn-block" %>
  </div>
<% end %>
