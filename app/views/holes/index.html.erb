

<div class="container-hole">
<div class="card-columns">
  <% @course.holes.each do |hole| %>
    <div class="card border-0">
      <table class="table table-bordered card-columns">
        <thead>
          <tr>
            <th colspan="3"><%= hole.hole_number %></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              <div style="min-height: 100px; min-width: 50px">
                <% if hole.map_r.attached? %>
                  <%= image_tag hole.map_r.variant(resize:'100x100') %>
                <% else %>
                  <%= image_tag '/noimage.png' %>
                <% end %>
              </div>
            </td>
            <td>
              <div style="min-height: 100px; min-width: 50px">
                <% if hole.map_b.attached? %>
                  <%= image_tag hole.map_b.variant(resize:'100x100') %>
                <% else %>
                  <%= image_tag '/noimage.png' %>
                <% end %>
              </div>
            </td>
            <td>
              <div style="min-height: 100px; min-width: 50px">
                <% if hole.map_l.attached? %>
                  <%= image_tag hole.map_l.variant(resize:'100x100') %>
                <% else %>
                  <%= image_tag '/noimage.png' %>
                <% end %>
              </div>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  <% end %>
</div>
</div>
